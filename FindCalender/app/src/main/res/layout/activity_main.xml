<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#78f4ca"
    tools:context=".MainActivity">

    <Spinner
        android:id="@+id/sp_selected"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:gravity="center"
        android:layout_marginTop="16dp"
        android:entries="@array/cal_category"
        />

    <Button
        android:id="@+id/btn_findFood"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/find_calender"
        android:layout_gravity="center"
        android:layout_margin="16dp"
        android:onClick="onClickFindCal"
        android:textSize="25sp"
        android:textColor="#E91E63"
        />


        <TextView
            android:id="@+id/tv_IdList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:text="@string/catagory"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textIsSelectable="true"
            />

</LinearLayout>